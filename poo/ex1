#include <iostream>

using namespace std;
int main (void){
	
   int idade;
   char nome[30];

   cout << "Escreva o seu nome:" << endl;
   cin >> nome;
   cout << "Insira a sua idade:" << endl;
   cin >> idade;
   cout << "O seu nome e: " << nome << " e tem: " << idade << "anos"<< endl;
   
   cout << endl << endl;
   system("pause");
   return (0);
}
