//2
#include <iostream>
using namespace std;

int main(void){
	
	int i = 123;
	double f = 1234.567;
	char x = 'z', y[50] = "Visual Studio C++\n";
	char ch[50];

	//std::cout << "i= " << i << '\n'; // without "using namespace std;"
	cout << "i= " << i << '\n';
	cout << "f= " << f << '\n';
	cout << "x= " << x << '\n';
	cout << "y= " << y << '\n';

	cout << "int = ";
	cin >> i;
	cout << "i= " << i << '\n';

	cout << "float = ";
	cin >> f;
	cout << "f= " << f << '\n';
	
	cout << "char = ";
	cin >> x;
	cout << "ch= " << x << '\n';
	
	
	cout << "String = ";
	cin.ignore(); //retira o ultimo enter inserido na consola.
	cin.getline(ch, sizeof (ch), '\n');
	cout << "str= " << ch << '\n';

	cout << endl << endl;
	system("pause");
	return (0);
}
